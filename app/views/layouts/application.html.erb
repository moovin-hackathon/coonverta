<!DOCTYPE html>
<html>
  <head>
    <title>Coonverta</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="user_nav">
    <% if current_user %>
      Logged in as <%= current_user.phone_number %>.
      <%= link_to "Log out", session_destroy_path %>
    <% else %>
      <%= link_to "Sign up", user_create_path %> or
      <%= link_to "log in", user_login_path %>
    <% end %>
    </div>
    
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>

    <%= yield %>
  </body>
</html>
